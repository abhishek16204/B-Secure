<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="2dip" android:color="#000000" />
            <gradient android:angle="-90" android:startColor="#eb4e4e4e" android:endColor="#cd131313"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="25dip" />
            <stroke android:width="1dip" android:color="#3c194ee1" />
            <solid android:color="#a71a34"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip"/>
            <stroke android:width="1dip" android:color="#00545454" />
            <gradient android:angle="-90" android:startColor="#e28f8f8f" android:endColor="#ab969696" />
        </shape>
    </item>

</selector>